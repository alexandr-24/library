<Window x:Class="library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="Библиотека" Height="500" Width="1000">
    <Grid Background="#FFF5F6FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="Home_Button" Content="Главная" Grid.Row="0" Style="{StaticResource isActiveButton}"/>
        <Button x:Name="Author_Button" Content="Авторы" Grid.Row="1"/>
        <Button x:Name="Book_Button" Content="Книги" Grid.Row="2"/>
        <Button x:Name="Reader_Button" Content="Читатели" Grid.Row="3"/>
        <Button x:Name="Subscription_Button" Content="Абонименты" Grid.Row="4"/>
        <Button x:Name="Fine_Button" Content="Штрафы" Grid.Row="5"/>


        <Frame x:Name="MainFrame" Grid.Column="1" Grid.RowSpan="7" Background="White"/>
    </Grid>
</Window>
