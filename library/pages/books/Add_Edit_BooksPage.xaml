<Page x:Class="library.pages.books.Add_Edit_BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:library.pages.books"
      mc:Ignorable="d" 
      d:DesignHeight="469" d:DesignWidth="792"
      Title="Add_Edit_BooksPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock FontFamily="Comic Sans MS" FontSize="22" Text="Автор:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock FontFamily="Comic Sans MS" FontSize="22" Text="Название:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock FontFamily="Comic Sans MS" FontSize="22" Text="Год публикации:" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock FontFamily="Comic Sans MS" FontSize="22" Text="Кол-во страниц:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock FontFamily="Comic Sans MS" FontSize="22" Text="Издание:" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>

        <ComboBox x:Name="Author_TB" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1} {2}">
                                <Binding Path="Surname"/>
                                <Binding Path="Name"/>
                                <Binding Path="Middle_name"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBox x:Name="Name_TB" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="10,0"/>
        <TextBox x:Name="Year_TB" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="10,0"/>
        <TextBox x:Name="Pages_DP" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Margin="10,0"/>
        <TextBox x:Name="Publisher_TB" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Margin="10,0"/>

        <Button x:Name="Save_Button" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Margin="10,0" Content="Сохранить" Style="{StaticResource controlButton}"/>
        <Button x:Name="Back_Button" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" Margin="10,0" Content="Назад" Style="{StaticResource controlButton}"/>
    </Grid>
</Page>
